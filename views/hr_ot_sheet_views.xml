<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- form -->
  <record id="view_hr_ot_sheet_form" model="ir.ui.view">
    <field name="name">hr.ot.sheet.form</field>
    <field name="model">hr.ot.sheet</field>
    <field name="arch" type="xml">
      <form string="OT Sheet">
        <header>
          <button name="action_import_excel"
                  string="Import Excel"
                  type="object"
                  class="btn-secondary"
                  invisible="state != 'draft'"/>
          <button name="action_apply_to_payslips"
                  string="Apply to Payslips"
                  type="object"
                  class="btn-primary"
                  invisible="state != 'draft'"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <label for="month" string="Period"/>
            <div class="o_row">
              <field name="month" class="oe_inline"/>
              <span>/</span>
              <field name="year" class="oe_inline" nolabel="1"/>
            </div>
            <field name="state"/>
          </group>
          <notebook>
            <page string="Lines">
              <field name="line_ids">
                <tree editable="bottom">
                  <field name="employee_id"/>
                  <field name="ot_normal"/>
                  <field name="ot_holiday"/>
                  <field name="late_deduction"/>
                  <field name="description"/>
                  <field name="applied"/>
                </tree>
              </field>
            </page>
            <page string="Import" invisible="state != 'draft'">
              <group>
                <field name="import_file" filename="import_filename"/>
                <field name="import_filename" invisible="1"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- tree -->
  <record id="view_hr_ot_sheet_tree" model="ir.ui.view">
    <field name="name">hr.ot.sheet.tree</field>
    <field name="model">hr.ot.sheet</field>
    <field name="arch" type="xml">
      <tree string="OT Sheets">
        <field name="name"/>
        <field name="month"/>
        <field name="year"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- action / menu -->
  <record id="action_hr_ot_sheet" model="ir.actions.act_window">
    <field name="name">OT Sheets</field>
    <field name="res_model">hr.ot.sheet</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_hr_ot_root" name="OT Sheet" parent="hr.menu_hr_root"/>
  <menuitem id="menu_hr_ot_sheet" name="OT Sheets" parent="menu_hr_ot_root" action="action_hr_ot_sheet"/>
</odoo>
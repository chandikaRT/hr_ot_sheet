<odoo>
  <record id="view_import_ot_wizard_form" model="ir.ui.view">
    <field name="name">hr.ot.import.wizard.form</field>
    <field name="model">hr.ot.import.wizard</field>
    <field name="arch" type="xml">
      <form string="Import OT Sheet">
        <sheet>
          <group>
            <field name="file" filename="filename"/>
            <field name="filename"/>
            <field name="month"/>
            <field name="year"/>
            <field name="sheet_ref"/>
          </group>
          <footer>
            <button string="Import" type="object" name="action_import" class="btn-primary"/>
            <!-- <button string="Apply to Payslips" type="object" name="action_create_inputs"/> -->
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_import_ot_wizard" model="ir.actions.act_window">
    <field name="name">Import OT</field>
    <field name="res_model">hr.ot.import.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_hr_ot_import" name="Import OT Sheet" parent="menu_hr_ot_root" action="action_import_ot_wizard"/>
</odoo>